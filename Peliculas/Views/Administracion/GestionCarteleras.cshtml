@model IEnumerable<Carteleras>
@{
    ViewBag.Title = "GestionCarteleras";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
@if (Session["NombreUsuario"] != null)
{
    <div class="row">


        <div class="col-md-12">
            <p>
                @Html.ActionLink("Cargar nueva cartelera", "AgregarCartelera")
            </p>
            <table class="table table-condensed">
                <tr>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Sedes.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Peliculas.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoraInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroSala)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Versiones.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lunes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Martes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Miercoles)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jueves)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Viernes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sabado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Domingo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCarga)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Sedes.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Peliculas.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroSala)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Versiones.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lunes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Martes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Miercoles)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jueves)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Viernes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sabado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Domingo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCarga)
                        </td>
                        <td>
                            
                            @Html.ActionLink("Editar","EditarCartelera", new { id = item.IdCartelera }) |
 
                            @Html.ActionLink("Eliminar", "EliminarCartelera", new { id = item.IdCartelera })

</td>
                    </tr>
                }

            </table>

        </div>
    </div>



}
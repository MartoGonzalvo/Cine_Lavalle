@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h3>Login</h3></div>
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <label>Usuario:</label>

@model Reservas

@{
    ViewBag.Title = "Reporte Reserva";
    Layout = "~/Views/Shared/_LayoutAdministracion.cshtml";
}
@if (Session["NombreUsuario"] != null)
{

<h2>AgregaSede</h2>

<div class="container">
    <div class="col-md-2"></div>
    @if (@ViewBag.msj != null)
    {
        <div class="alert alert-danger">@ViewBag.msj</div>
    }
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Pelicula", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Action("listarPelicula", "Administracion")
                        @Html.ValidationMessageFor(model => model.IdPelicula, " ", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Desde", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaCarga, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaCarga, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Hasta", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaHoraInicio, new { htmlAttributes = new { type = "date", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaHoraInicio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ver Listado" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver al Inicio", "Inicio")
        </div>

    </div>
    <div class="col-md-2"></div>
</div>
}